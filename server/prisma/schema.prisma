generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                   Int       @id @default(autoincrement())
  email                String    @unique
  password             String
  name                 String
  role                 String    @default("STUDENT")
  major                String?
  profileImage         String?
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  resetPasswordExpires DateTime?
  resetPasswordToken   String?
  about                String?
  skills               String?
  messages             Message[]
}

model PFE {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  academicYear    String
  major           String
  studentNames    String
  reportUrl       String?
  presentationUrl String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  companyId       Int?
  company         Company? @relation(fields: [companyId], references: [id])
}

model Company {
  id            Int      @id @default(autoincrement())
  name          String
  sector        String
  city          String
  email         String?
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  contactPerson String?
  website       String?
  pfes          PFE[]
}

model Alert {
  id        Int      @id @default(autoincrement())
  type      String   @default("INFO")
  title     String
  content   String
  target    String   @default("ALL")
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatRoom {
  id        String   @id @default(uuid())
  name      String
  icon      String?
  type      String   @default("GROUP") // GROUP, MAJOR, GLOBAL
  createdAt DateTime @default(now())
}

model Alumni {
  id             Int      @id @default(autoincrement())
  name           String
  graduationYear String
  major          String
  currentCompany String?
  email          String?
  linkedIn       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String?
  type      String   @default("TEXT")
  fileUrl   String?
  duration  Int?
  room      String
  senderId  Int
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  sender    User     @relation(fields: [senderId], references: [id])
}
